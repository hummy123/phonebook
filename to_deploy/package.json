{
  "name": "phonebook-backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.mjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.mjs",
    "dev": "nodemon index.mjs",
    "copyfront": "cd ../frontend/ && npm run build --prod && cp -r build ../to_deploy",
    "copyback": "cd ../backend && cp -r ./ ../to_deploy",
    "copyfull": "npm run copyfront && npm run copyback",
    "commit": "cd ../to_deploy && git add . && git commit -m $1",
    "deploy": "npm run copyfull && npm run commit && git push heroku",
    "deployfull": "npm run deploy && npm run deploy",
    "lint": "eslint . --ext=mjs,js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-vue": "^7.17.0",
    "nodemon": "^2.0.12"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.5",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0"
  }
}
